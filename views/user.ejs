<%- include('partials/head'); %>
    <body>
        <%- include('partials/navbar'); %>
        <div class="container">
            <%- include('partials/titlePokemonApp'); %>
            <div class="row">
                <div class="mx-auto mt-5">
                    <a class="btn text-white bg-dark shadow" href="/pokemons">Ver Todos los Pokemons</a>
                </div>
            </div>
            <h2 class="text-center mt-5">Tus Pokemons</h2>
            <%if(user.pokemons.length == 0){%>
                <p class="text-center">No tienes Pokemons AÃºn..</p>
                <div class="text-center">
                    <a class="btn text-white bg-secondary shadow text-center" href="/pokemons">
                        Atrapalos! <span><img src="/public/images/pokeball.png" width="20" height="20"></span>
                    </a>
                </div>
            <%}else{%>
                <div class="row">
                    <div class="d-flex justify-content-center flex-wrap col-md-12">
                        <% user.pokemons.forEach(pokemon => { %>
                        <div class="card mx-auto mt-5">
                            <img src="<%= pokemon.image %>" alt="<%= pokemon.name %>" style="width: 300px; height: 300px;">

                            <div class="card-body">
                                <h5 class="card-title"><%= pokemon.name %></h5>
                                <p class="card-text">Tipo: <%= pokemon.type %></p>
                                <div class="text-right">
                                    <a href="/pokemons/<%= pokemon._id %>/<%= pokemon.slug %>" class="btn btn-secondary">Ver
                                        Pokemon</a>
                                </div>
                            </div>
                        </div>
                        <% }) %>
                    </div>
                </div>
            <%}%>
        </div>
        <%- include('partials/scripts'); %>
    </body>
</html>