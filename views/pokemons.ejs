<%- include('partials/head'); %>

<body>
    <%- include('partials/navbar'); %>
    <div class="container">
        <%- include('partials/titlePokemonApp'); %>
        <h2 class="text-center"> Todos los Pokemons </h2>
        <%if(user){%>
            <div class="mx-auto text-center mt-5">
                <a class="btn text-white bg-dark shadow" href="/pokemons/add">Nuevo Pokemon</a>
            </div>
        <%}%>
        <div class="row">
            <div class="d-flex justify-content-center flex-wrap">
                <% pokemons.forEach(pokemon => { %>
                <div class="card mx-auto mt-5">
                    <img src="<%= pokemon.image %>" alt="<%= pokemon.name %>" style="width: 300px; height: 300px;">

                    <div class="card-body">
                        <h5 class="card-title"><%= pokemon.name %></h5>
                        <p class="card-text">Tipo: <%= pokemon.type %></p>
                        <div class="text-right">
                            <a href="/pokemons/<%= pokemon._id %>/<%= pokemon.slug %>" class="btn btn-secondary">Ver Pokemon</a>
                        </div>
                    </div>
                </div>
                <% }) %>
            </div>
        </div>
    </div>
    <%- include('partials/scripts'); %>
</body>

</html>